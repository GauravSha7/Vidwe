<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gaurav.vidwe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vidus">
        <activity
            android:name="com.gaurav.vidwe.DashboardActivity"
            android:exported="true" />
        <activity
            android:name="com.gaurav.vidwe.SignupActivity"
            android:exported="true"
            android:label="New Account" />
        <activity
            android:name="com.gaurav.vidwe.LoginActivity"
            android:exported="true"
            android:label="Login" />
        <activity
            android:name="com.gaurav.vidwe.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Vidus.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>